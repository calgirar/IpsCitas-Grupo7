@{
    ViewData["HomeCurrent"] = "Inicio";
    ViewData["CitasCurrent"] = "Citas";
    ViewData["ConfigeCurrent"] = "Config";
}
<!DOCTYPE html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - IPS Salud Integral</title>
        <link rel="stylesheet" href="~/css/ipsicons.css">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Karla&family=Lato&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="~/css/style.css" />
    </head>
    <body>
        <header>
            <div id="h-logo">
                <img src="~/media/logo.png" alt="Salud Integral">
                <h1>Salud Integral <span>/ Pacientes</span></h1>
            </div>
            <div id="h-right">
                <div id="h-userinfo">
                    <img src="~/media/user.png">
                    <span>@ViewData["Usuario"]</span>
                </div>
            </div>
        </header>
        <div id="content">
            <nav id="app-nav">
                <ul>
                    <li class='@(@ViewData["Current"] == @ViewData["HomeCurrent"] ? "current" : "")' ><a asp-page="Index"><i class="icon-home"></i></a></li>
                    <li class='@(@ViewData["Current"] == @ViewData["CitasCurrent"] ? "current" : "")' ><a asp-page="Cita"><i class="icon-stethoscope"></i></a></li>
                    <li class='@(@ViewData["Current"] == @ViewData["ConfigeCurrent"] ? "current" : "")' ><a asp-page="Config"><i class="icon-cog"></i></a></li>
                </ul>
            </nav>
            <div id="app-box" class="app-conainers">
                <h2>@ViewData["Title"]</h2>
                @RenderBody()
            </div>
            <div id="app-sidebar" class="app-conainers">
                <div id="sb-profilebox">
                    <img src="~/media/user.png">
                    <h2>@ViewData["pacienteNombre"]</h2>
                    <span>PACIENTE</span>
                </div>
                <br>
                <div class="sb-infobox"><span>CC</span> <b>@ViewData["pacienteNIT"]</b></div>
                <div class="sb-infobox"><span>Fecha Nac</span> <b>@ViewData["pacienteFechaNacimiento"]</b></div>
                <div class="sb-infobox"><span>Correo</span> <b>@ViewData["pacienteCorreo"]</b></div>
                <div class="sb-infobox"><span>Telefono</span> <b>@ViewData["pacienteTelefono"]</b></div>
                <div class="sb-infobox"><span>Direccion</span> <b>@ViewData["pacienteDireccion"]</b></div>
                <div class="sb-infobox"><span>Ciudad</span> <b>@ViewData["pacienteCiudad"]</b></div>
                <div class="sb-infobox"><span>Genero</span> <b>@ViewData["pacienteGenero"]</b></div>
                <div class="sb-infobox"><span>Usuario</span> <b>@ViewData["pacienteUsuario"]</b></div>
            </div>
        </div>
         @RenderSection("Scripts", required: false)
    </body>
</html>